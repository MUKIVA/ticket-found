<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TicketFound" />
    <style name="TicketFound.TextAppearance">
        <item name="fontFamily">@font/sf_display</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TicketFound.TextAppearance.Title1">
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TicketFound.TextAppearance.Title2">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TicketFound.TextAppearance.Title3">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TicketFound.TextAppearance.Title4">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TicketFound.TextAppearance.Text1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TicketFound.TextAppearance.Text2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TicketFound.TextAppearance.ButtonText1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TicketFound.TextAppearance.TabText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TicketFound.DefaultButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TicketFound.TextAppearance.ButtonText1</item>
    </style>

    <style name="TicketFound.DefaultButton.Dark">
        <item name="android:background">@drawable/background_button_dark</item>
        <item name="android:textColor">@color/button_dark_text</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TicketFound.DefaultButton.Accent">
        <item name="android:background">@drawable/background_button_accent</item>
        <item name="android:textColor">@color/button_dark_text</item>
    </style>

    <style name="TicketFound.DefaultButton.Small">
        <item name="android:background">@drawable/background_button_small</item>
        <item name="android:textColor">@color/button_small_text</item>
        <item name="android:minHeight">33dp</item>
    </style>

    <style name="TicketFound.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@drawable/background_bottom_navigation</item>
        <item name="itemIconTint">@color/bottom_navigation_primary_color</item>
        <item name="itemTextColor">@color/bottom_navigation_primary_color</item>
        <item name="itemTextAppearanceActive">@style/TicketFound.TextAppearance.TabText</item>
        <item name="itemTextAppearanceInactive">@style/TicketFound.TextAppearance.TabText</item>
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="TicketFound.EditText">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TicketFound.BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/TicketFound.BottomSheet.Modal</item>
    </style>

    <style name="TicketFound.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet</item>
    </style>
    <style name="TicketFound.ImageShape" />
    <style name="TicketFound.ImageShape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>

</resources>