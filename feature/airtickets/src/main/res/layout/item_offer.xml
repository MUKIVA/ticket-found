<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="133dp"
        android:layout_height="133dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Die Antwoord"
        android:textAppearance="@style/TicketFound.TextAppearance.Title3"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/town"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TicketFound.TextAppearance.Text2"
        tools:text="Будапешт"
        app:layout_constraintTop_toBottomOf="@id/offerTitle"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_plane"
        android:drawableTint="@color/gray_6"
        android:drawablePadding="1dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TicketFound.TextAppearance.Text2"
        tools:text="от 22 000 $"
        app:layout_constraintTop_toBottomOf="@id/town"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>